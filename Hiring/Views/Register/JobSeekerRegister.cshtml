@model Hiring.Models.JobSeeker
@{
    ViewBag.Title = "JobSeekerRegister";
    Layout = "~/hiring/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="text-center">Register as a JobSeeker here</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("JobSeekerRegister", "Register", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-md-4 text-right">
                            @Html.LabelFor(m => m.Name, "Name", new { @class = "control-label" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 text-right">
                            @Html.LabelFor(m => m.Email, "Email", new { @class = "control-label" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 text-right">
                            @Html.LabelFor(m => m.Password, "Password", new { @class = "control-label" })
                        </div>
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 text-right">
                            @Html.LabelFor(m => m.PhoneNumber, "Phone Number", new { @class = "control-label" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 text-right">
                            @Html.LabelFor(m => m.Username, "Username", new { @class = "control-label" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 text-right">
                            @Html.LabelFor(m => m.Skills, "Skills", new { @class = "control-label" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextAreaFor(m => m.Skills, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 text-right">
                            @Html.LabelFor(m => m.Address, "Address", new { @class = "control-label" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextAreaFor(m => m.Address, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <button type="submit" class="btn btn-default">Register</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>