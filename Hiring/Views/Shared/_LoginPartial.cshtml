@using Hiring.Models
@using Hiring.Repositories
@using Microsoft.AspNet.Identity
@if (Session["employerId"] != null)
{
    var repository = new Repository();
    var employer = repository.GetEmployerById((int)Session["employerId"]);
    using (Html.BeginForm("Logout", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + employer.Username + "!", "Manage", "Account", routeValues: null, htmlAttributes: null)
        </li>
        <li>
            @Html.ActionLink("Logout", "Logout", "Login", routeValues: null, htmlAttributes: null)
        </li>
    </ul>
    }
}
else if (Session["jobSeekerId"] != null)
{
    var repository = new Repository();
    var jobSeeker = repository.GetJobSeekerById((int) Session["jobSeekerId"]);
    using (Html.BeginForm("Logout", "Login", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + jobSeeker.Username + "!", "Manage", "Account", routeValues: null, htmlAttributes: null)
            </li>
            <li>
                @Html.ActionLink("Logout", "Logout", "Login", routeValues: null, htmlAttributes: null)
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Register", "Index", "Register", routeValues: null, htmlAttributes: new { id = "registerLink" })
        </li>
        <li>
            @Html.ActionLink("Log in", "Login", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </li>
    </ul>
}
