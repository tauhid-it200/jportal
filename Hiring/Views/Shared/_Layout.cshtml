<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hiring</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hiring", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Session["employerId"] != null)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Home", "Employer", new { @id = (int)Session["employerId"] }, null)</li>
                        <li>@Html.ActionLink("Post New Job", "JobPosting", "Employer", null, null)</li>
                        <li>@Html.ActionLink("Posted Jobs", "EmployerJobList", "Employer", new { @id = (int)Session["employerId"] }, null)</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>

                }
                else if (Session["jobSeekerId"] != null)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Home", "JobSeeker", new { @id = (int)Session["jobSeekerId"] }, null)</li>
                        <li>@Html.ActionLink("Find Jobs", "AllJobList", "JobSeeker", null, null)</li>
                        <li>@Html.ActionLink("Applied Jobs", "AppliedJobList", "JobSeeker", new { @id = (int)Session["jobSeekerId"] }, null)</li>
                        <li>@Html.ActionLink("Bookmarked Jobs", "BookmarkedJobList", "JobSeeker", new { @id = (int)Session["jobSeekerId"] }, null)</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", null, null)</li>
                        <li>@Html.ActionLink("Find Jobs", "AllJobList", "JobSeeker", null, null)</li>
                        <li>@Html.ActionLink("About", "About", "Home", null, null)</li>
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
