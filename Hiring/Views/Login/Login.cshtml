
@{
    ViewBag.Title = "Login";
    Layout = "~/hiring/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-2 col-md-8 text-center">
        @if (Session["message"] != null)
        {
            <p>@Session["message"]</p>
            Session["message"] = null;
        }
        <br/>
        <h3>Login As</h3>
        <br/>
        @Html.ActionLink("Job Seeker", "JobSeekerLogin", "Login", null, new {@class = "btn btn-info"})
        @Html.ActionLink("Employer", "EmployerLogin", "Login", null, new {@class = "btn btn-warning"})
    </div>
</div>


